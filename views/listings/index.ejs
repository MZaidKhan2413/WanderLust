<% layout("/layouts/boilerplate.ejs") %>

    <div id="filters">
        <div class="filters-box">
            <a href="/listings">
                <div class="filter">
                    <div><i class="fa-solid fa-earth-asia"></i></div>
                    <p>All</p>
                </div>
            </a>
            <a href="/listings/filter/resorts">
                <div class="filter">
                    <div><i class="fa-solid fa-city"></i></div>
                    <p>Resorts</p>
                </div>
            </a>
            <a href="/listings/filter/lakes">
                <div class="filter">
                    <div><i class="fa-solid fa-water"></i></div>
                    <p>Lakes</p>
                </div>
            </a>
            <a href="/listings/filter/mountains">
                <div class="filter">
                    <div><i class="fa-solid fa-mountain"></i></div>
                    <p>Mountains</p>
                </div>
            </a>
            <a href="/listings/filter/beach">
                <div class="filter">
                    <div><i class="fa-solid fa-umbrella-beach"></i></div>
                    <p>Beach</p>
                </div>
            </a>
            <a href="/listings/filter/rooms">
                <div class="filter">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </div>
            </a>
            <a href="/listings/filter/tents">
                <div class="filter">
                    <div><i class="fa-solid fa-tents"></i></div>
                    <p>Tents</p>
                </div>
            </a>
            <a href="/listings/filter/farms">
                <div class="filter">
                    <div><i class="fa-solid fa-cow"></i></div>
                    <p>Farms</p>
                </div>
            </a>
            <a href="/listings/filter/arctic">
                <div class="filter">
                    <div><i class="fa-solid fa-snowflake"></i></div>
                    <p>Arctic</p>
                </div>
            </a>
            <a href="/listings/filter/historical">
                <div class="filter">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>
                    <p>Historical</p>
                </div>
            </a>
            <a href="/listings/filter/boats">
                <div class="filter">
                    <div><i class="fa-solid fa-sailboat"></i></div>
                    <p>Boats</p>
                </div>
            </a>
        </div>
        <div class="tax-switch me-auto ms-auto">
            <div class="form-check-reverse form-switch">
                <label class="form-check-label" for="flexSwitchCheckDefault">Show prices with taxes</label>
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            </div>
        </div>
    </div>

    <% if (allListings.length <= 0) { %>
        <div class="no-listings">
            <i class="fa-solid fa-file"></i>
            <p>No Listings for now!</p>
            <a href="/listings"><button class="btn btn-dark mb-3">Go to Home</button></a>
            <a href="/listings/new"><button class="btn btn-dark">Add new listing</button></a>
        </div>
    <% } %>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing_image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night &nbsp; &nbsp; <i class="gst-tax">+ &#8377; <%= ((listing.price * 18)/100).toLocaleString("en-IN") %> GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>