<% layout("/layouts/boilerplate.ejs") %>

<div class="row justify-content-center">
    <h3 class="col-7 mt-3 text-center">Login</h3>
    <div class="col-6 user-col">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 user-mb">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="invalid-feedback">Enter Username</div>
            </div>
            <div class="mb-3 user-mb">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="invalid-feedback">Enter password</div>
            </div>
            <button class="btn btn-dark add-btn">Login</button>
        </form>
        <br>
        <div>
            <p>Create new account:<a href="/signup" class="ms-2">Sign Up</a></p>
        </div>
    </div>
</div>